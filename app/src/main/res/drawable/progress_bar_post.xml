<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#4DB8C1CC"
                android:centerColor="#4DB8C1CC"
                android:centerY="0.5"
                android:endColor="#4DB8C1CC"
                />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#4BB34B"
                    android:centerColor="#4BB34B"
                    android:centerY="0.75"
                    android:endColor="#4BB34B"
                    />
            </shape>
        </clip>
    </item>

</layer-list>