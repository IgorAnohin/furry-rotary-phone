<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#4D3F8AE0"
                android:centerColor="#4D3F8AE0"
                android:centerY="0.5"
                android:endColor="#4D3F8AE0"
                />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#3F8AE0"
                    android:centerColor="#3F8AE0"
                    android:centerY="0.75"
                    android:endColor="#3F8AE0"
                    />
            </shape>
        </clip>
    </item>

</layer-list>